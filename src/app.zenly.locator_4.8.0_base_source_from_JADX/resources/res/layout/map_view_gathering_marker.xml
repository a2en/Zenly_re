<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <app.zenly.locator.core.p072ui.view.particles.ParticleView android:id="@+id/particles" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/marker_expanded" android:layout_width="@dimen/gathering_marker_size" android:layout_height="@dimen/gathering_marker_size" android:transformPivotX="@dimen/gathering_marker_pivot_x" android:transformPivotY="@dimen/gathering_marker_pivot_y">
        <FrameLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/normal_marker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/normal_marker_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="0x7f080229"/>
            <ImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/normal_marker_avatar" android:layout_width="@dimen/marker_avatar_size" android:layout_height="@dimen/marker_avatar_size" android:layout_marginBottom="13dp"/>
        </FrameLayout>
        <FrameLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/static_flame_marker" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
            <ImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/static_flame_marker_avatar" android:layout_width="@dimen/marker_avatar_size" android:layout_height="@dimen/marker_avatar_size" android:layout_marginBottom="6dp"/>
        </FrameLayout>
        <ImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/shader_flame_marker_avatar" android:visibility="invisible" android:layout_width="@dimen/gathering_marker_image_size" android:layout_height="@dimen/gathering_marker_image_size"/>
        <app.zenly.locator.map.view.FlameView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/shader_flame_marker" android:visibility="invisible" android:layout_width="100dp" android:layout_height="175dp"/>
        <FrameLayout android:id="@+id/contextuals_container" android:paddingTop="56dp" android:paddingBottom="@dimen/gathering_marker_contextuals_bottom_normal" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="36dp" android:paddingEnd="32dp">
            <TextView android:textAppearance="@style/TextAppearance.Statement" android:textColor="@color/white" android:gravity="center" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/notifications" android:background="0x7f08036e" android:paddingBottom="@dimen/spacing_25" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="true" android:backgroundTint="@color/pink"/>
            <TextView android:textAppearance="@style/TextAppearance.Statement" android:textColor="@color/white" android:gravity="center" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/counter" android:background="@drawable/circle_blue" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginEnd="4dp"/>
            <ImageView android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/icon" android:layout_width="27dp" android:layout_height="27dp" android:layout_marginStart="4dp"/>
        </FrameLayout>
    </FrameLayout>
    <ImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/marker_collapsed" android:visibility="invisible" android:layout_width="@dimen/user_marker_blue_dot" android:layout_height="@dimen/user_marker_blue_dot" android:alpha="0"/>
</merge>
