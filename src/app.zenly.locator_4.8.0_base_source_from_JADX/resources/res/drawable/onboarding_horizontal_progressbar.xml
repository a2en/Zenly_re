<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="@color/green"/>
                <corners android:topLeftRadius="0dp" android:topRightRadius="@dimen/corner_radius_max" android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/corner_radius_max"/>
            </shape>
        </scale>
    </item>
</layer-list>
