<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="1.2" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="1.2" android:valueType="floatType" android:propertyName="scaleY"/>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="@dimen/elevation_400" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY"/>
            <objectAnimator android:interpolator="@android:interpolator/decelerate_cubic" android:duration="@integer/anim_time_small" android:valueTo="@dimen/elevation_200" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
</selector>
